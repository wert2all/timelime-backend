# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
  todos: [Todo!]!
}

type Mutation {
  authorize: User
  addTimeline(timeline: AddTimeline): ShortUserTimeline!
}

type Todo {
  id: Int!
  text: String!
  done: Boolean!
  user: User!
}

type ShortUserTimeline {
  id: Int!
  name: String
}

type User {
  id: Int!
  name: String!
  email: String!
  avatar: String
  isNew: Boolean!
  timelines: [ShortUserTimeline!]!
}

input AddTimeline{
  name: String
}