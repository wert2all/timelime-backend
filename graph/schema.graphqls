# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
  todos: [Todo!]!
}

type Mutation {
  authorize: User
}

type Todo {
  id: Int!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: Int!
  name: String!
  email: String!
  avatar: String
  isNew: Boolean!
}
